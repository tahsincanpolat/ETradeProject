@model ProductDetailsModel
@{
    ViewData["title"] = "Product Detail";
}

<div class="row product-detail">
    <div class="col-md-3">
        <div class="row">
            <div class="col-md-12 mb-3">
                @{
                    var image = Model.Product.Images.Find(img => img.ProductId == Model.Product.Id);
                }
                @if (image != null)
                {
                    <img src="~/img/@image.ImageUrl" />
                }
                else
                {
                    <img src="~/img/placeholder.jpg" />
                }
            </div>
        </div>
        <div class="row">
            @foreach (var img in Model.Product.Images)
            {
                <div>
                    <img src="~/img/@img.ImageUrl" class="img-fluid thumb-image" />
                </div>
            }
        </div>
       
    </div>
    <div class="col-md-9">
        <h1 class="mb-3">@Model.Product.Name</h1>
        <hr />
        <br />
        @foreach (var category in Model.Categories)
        {
            <a href="#" class="btn btn-link p-0 mb-3">@category.Name</a>
        }
        <div class="mb-3">
            <h4 class="text-primary mb-3">@Model.Product.Price TL</h4>
            @if(!User.IsInRole("admin") && !User.Identity.IsAuthenticated)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="POST">
                    <input type="hidden" name="productId" value="@Model.Product.Id" />
                     <div class="input-group">
                         <input type="number" name="quantity" value="1" min="1" step="1" class="form-control" />
                         <div class="input-group-append">
                            <button type="submit" class="btn btn-outline-primary btn-sm ms-3">
                                <i class="fas fa-cart-plus"></i>
                                Add To Cart
                             </button>

                         </div>
                     </div>
                </form>
            }
        </div>
    </div>
</div>