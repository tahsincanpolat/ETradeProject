@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Scripts{
    <script src="~/modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<h1>Login</h1>
<h4>Login User</h4>
<div class="row">
    <div class="col-md-12">
        <form asp-action="Login">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label" />
                <input asp-for="Email" class="form-control" placeholder="Email"/>
                <span asp-asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label asp-for="Password" class="control-label" />
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Login" class="btn btn-primary" />
                <a href="/Account/ForgotPassword" type="submit" class="btn btn-warning">Forgot Password</a>
            </div>
        </form>
    </div>
</div>